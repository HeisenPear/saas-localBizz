# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co

# Anonymous/public key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key (NEVER expose in browser, server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key


# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys

# Publishable key (safe to expose in browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_...

# Webhook signing secret (from Stripe webhook dashboard)
# https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Product Price IDs (from Stripe Products dashboard)
# Create 3 products: Essential (€79), Pro (€149), Premium (€299)
STRIPE_PRICE_ID_ESSENTIAL=price_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_PREMIUM=price_...


# ============================================
# RESEND CONFIGURATION
# ============================================
# Get your API key from: https://resend.com/api-keys

RESEND_API_KEY=re_...


# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Your application URL (no trailing slash)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development
